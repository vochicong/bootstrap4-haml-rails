%nav.navbar.navbar-toggleable-md.navbar-inverse.bg-inverse
  %button.navbar-toggler.navbar-toggler-right{ type: "button", "data-toggle": "collapse", "data-target": "#navbarSupportedContent", "aria-controls": "navbarSupportedContent", "aria-expanded": "false", "aria-label": "Toggle navigation" }
    %span.navbar-toggler-icon
  =link_to 'Brand', '#', class: "navbar-brand"

  #navbarSupportedContent.collapse.navbar-collapse
    .navbar-nav.mr-auto
      =link_to 'Active', '#', class: "nav-item nav-link active"
      =link_to 'Link', '#', class: "nav-item nav-link"
      =link_to 'Disabled', '#', class: 'nav-item nav-link disabled'
      .nav-item.dropdown
        %a#navbarDropdownMenuLink.nav-link.dropdown-toggle{ href:"http://example.com", "data-toggle":"dropdown", "aria-haspopup":"true", "aria-expanded":"false" } Dropdown
        .dropdown-menu{ "aria-labelledby":"navbarDropdownMenuLink" }
          %a.dropdown-item{ href:"#" } Action
          %a.dropdown-item{ href:"#" } Another action
          %a.dropdown-item{ href:"#" } Something else here
      %span.navbar-text Navbar inline text
    .navbar-nav
      %form.form-inline.my-2.my-lg-0
        %input.form-control.mr-sm-2{ type:"text", placeholder:"Search" }
        %button.btn.btn-outline-success.my-2.my-sm-0{ type:"submit" } Search

%article
  %h1 Source code
  %ul.list-group
    %li.list-group-item
      = link_to "navbar.html.haml", oss_url("app/views/bootstrap_examples/navbar.html.haml")
    %li.list-group-item
      = link_to "navbar.scss", oss_url("app/assets/stylesheets/navbar.scss")
    %li.list-group-item
      = link_to "application.js", oss_url("app/assets/javascripts/application.js")
